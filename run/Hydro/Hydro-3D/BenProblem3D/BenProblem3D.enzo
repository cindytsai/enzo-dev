#
# PROBLEM DEFINITION FILE:
# 
# 3D Noh Problem
#
#  define problem
#
ProblemType            = 9
TopGridRank            = 3 //Â dimensions
TopGridDimensions      = 128 128 128 
DomainRightEdge        = 1.0 1.0 1.0
DomainLeftEdge         = 0.0 0.0 0.0
HydroMethod            = 0 # PPM
# SG additions
NohProblemFullBox = 1
TopGridGravityBoundary = 0           // Periodic BCs
LeftFaceBoundaryCondition  = 3 3 3   // periodic
RightFaceBoundaryCondition = 3 3 3
SelfGravity            = 1       // Gravity ON - if the parameter SelfGravity is turned on (set to 1), the parameter GravitationalConstant must be set to 4*pi*G
GravitationalConstant  = 1.668238e12 // 4*pi*G_{cgs}*MassUnits*(TimeUnits**2)/(LengthUnits^3) km^3 msun^-1 s^-2 (TimeUnits=1)
#
#
#  set I/O and stop/start parameters
#
StopTime               = 2.0
dtDataDump             = 0.1
DataDumpName           = DD

# SG
# reading of initial conditions and writing out of data dumps is fully parallelized
ParallelParticleIO = 1
ParallelRootGridIO = 1
Unigrid = 1
#
#  set hydro parameters
#
Gamma                  = 1.666667
PPMDiffusionParameter  = 0
PPMSteepeningParameter = 0
CourantSafetyNumber    = 0.8
# SG
ExternalGravity        = 30      // Ben's potential in AddExternalPotentialField
ExternalGravityConstant = 2.5e3  // Mass of perturber in Msolar
#
#  set grid refinement parameters for a unigrid
#
StaticHierarchy        = 1    // dynamic hierarchy turned off, unigrid
MaximumRefinementLevel = 0    // use up to 0 levels
#
#  set some global parameters
#
tiny_number            = 1.0e-10
#
#   set units
#
#DensityUnits = 6.765750671032827e-32    # 1 msun/kpc^3 in g/cm^3 - must choose to set either mass or density
#LengthUnits = 3.086e21                 # 1 kpc in cm
LengthUnits = 1e5                       # 1 km in cm
#TimeUnits = 3.1557e+13                 # 1 Myr in seconds
TimeUnits = 1                           # seconds
#VelocityUnits = 1e5                     # km/s
MassUnits = 1.9891e33                   # 1 Msun in g
